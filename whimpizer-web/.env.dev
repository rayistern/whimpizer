# Development Environment Configuration
# Copy this to .env and fill in your actual API keys

# AI Provider API Keys (fill in your actual keys)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here  
GOOGLE_API_KEY=your_google_key_here

# Open Source Portkey Configuration
USE_OPEN_SOURCE_PORTKEY=true
AI_BASE_URL=http://portkey:8000

# Authentication (optional - leave blank to disable)
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
ENABLE_AUTH=false

# Application Settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Redis Configuration (handled by docker-compose)
REDIS_URL=redis://redis:6379

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_CLERK_PUBLISHABLE_KEY=${CLERK_PUBLISHABLE_KEY}
FRONTEND_URL=http://localhost:3001

# Database (if you add one later)
DATABASE_URL=

# Admin Settings (stored in environment for now)
MAX_CONCURRENT_JOBS=5
MAX_URLS_PER_JOB=10
DEFAULT_MAX_TOKENS=3000
ADMIN_EMAIL=admin@bookerizer.com