# Environment Configuration for Whimpizer Web

# AI Provider Configuration
USE_OPEN_SOURCE_PORTKEY=true
AI_BASE_URL=http://localhost:8787
AI_DEFAULT_PROVIDER=openai
AI_DEFAULT_MODEL=gpt-4

# Provider API Keys (for open source mode)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_API_KEY=your-google-api-key

# Alternative: Cloud Portkey
# USE_OPEN_SOURCE_PORTKEY=false
# AI_BASE_URL=https://api.portkey.ai/v1
# AI_API_KEY=your_portkey_cloud_api_key

# Application Settings
DEBUG=true
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Redis Configuration
REDIS_URL=redis://localhost:6379

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
MAX_JOBS_PER_USER=10

# Job Processing Settings
JOB_TIMEOUT=3600  # 1 hour in seconds

# Original Whimpizer Paths (when running locally without Docker)
WHIMPIZER_CONFIG_PATH=../config/config.yaml
WHIMPIZER_SRC_PATH=../src
WHIMPIZER_RESOURCES_PATH=../resources

# Security (for production)
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=["http://localhost:3000"]

# Authentication (Clerk)
ENABLE_AUTH=false
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key

# Database (if adding persistent storage later)
# DATABASE_URL=sqlite:///./whimpizer.db

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn-here